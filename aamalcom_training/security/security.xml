<odoo>
    <data >
        <!-- Parent group -->
    <record id="module_category_training_program" model="ir.module.category">
        <field name="name">Training Program</field>
        <!-- <field name="parent_id" ref="base.module_category_human_resources"/> -->
        <field name="sequence">9</field>
        <!-- This makes it a dropdown instead of checkboxes -->
    </record>

    <!-- Internal Employee -->
    
        <record id="group_training_manager" model="res.groups">
            <field name="name">Training / Manager</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_training_program"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="group_training_user" model="res.groups">
            <field name="name">Training / User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_training_program"/>
        </record>
    </data>

    <record id="training_course_access_rules" model="ir.model.access">
        <field name="name">Training Course Access Rules</field>
        <field name="model_id" ref="model_training_course"/>

    </record>

    
</odoo>