<odoo>
    <data>
        <record id="training_course_form_view" model="ir.ui.view">
            <field name="name">training.course.form</field>
            <field name="model">training.course</field>
            <field name="arch" type="xml">
                <form string="Training Details">
                    <header>
                        <button name="action_submit" type="object" string="Submit" class="oe_highlight" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted"/>
                        <!-- <button name="action_accept" type="object" string="Accept" class="oe_highlight" 
                                states="submitted"
                                groups="aamalcom_training.group_training_user"
                               />
                        <button name="action_later_review" type="object" string="Later Review"
                                states="submitted"
                                groups="aamalcom_training.group_training_user"
                                /> -->
                    </header>
                    
                    <sheet>
                        <group>
                            <group>
                                <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="end_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <field name="timings" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </page>
                           <!--  <page string="Purpose">
                                <field name="purpose"/>
                            </page> -->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="training_course_tree_view" model="ir.ui.view">
            <field name="name">training.course.tree</field>
            <field name="model">training.course</field>
            <field name="arch" type="xml">
                <tree string="Training Details">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="timings"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="training_course_action" model="ir.actions.act_window">
            <field name="name">Training Details</field>
            <field name="res_model">training.course</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>