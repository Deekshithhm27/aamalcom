<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_employee_rule" model="ir.rule">
        <field name="name">Employee: See own time off requests</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('visa_process.group_hr_employee'))]"/>
        <field name="domain_force">[('employee_id.user_id.id', '=', user.id)]</field>
    </record>
    <record id="hr_leave_manager_rule" model="ir.rule">
        <field name="name">Managers: See department time off requests</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('visa_process.group_service_request_manager'))]"/>
        <field name="domain_force">[('employee_id.parent_id.user_id.id', '=', user.id)]</field>
    </record>
    <record id="hr_leave_admin_rule" model="ir.rule">
        <field name="name">Admins: See all time off requests</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('visa_process.group_service_request_administrator')), (4, ref('visa_process.group_service_request_hr_manager')), (4, ref('visa_process.group_service_request_general_manager')), (4, ref('visa_process.group_service_request_employee'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>