<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="final_clearance_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1 style="text-align: center; margin-bottom: 20px;">Service Request-Final Clearance Report</h1>

                    <div style="margin-bottom: 20px; text-align: center;">
                        <p>
                            <strong>Service Request Name:</strong> <t t-esc="service_request_type_fixed_label or 'Final Clearance'"/> <br/>
                            <strong>Final Clearance Type:</strong> <t t-esc="final_clearance_type_label or ''"/> <br/>
                            <strong>From Date:</strong> <t t-esc="from_date and from_date.strftime('%d-%m-%Y') or ''"/>
                            <t t-if="from_date and to_date">
                                <span> - </span>
                            </t>
                            <strong>To Date:</strong> <t t-esc="to_date and to_date.strftime('%d-%m-%Y') or ''"/>
                        </p>
                    </div>

                    <t t-if="docs and docs[0] and docs[0]['employees']">
                        <table class="table table-sm" style="width:100%; border-collapse: collapse;" border="1">
                            <thead>
                                <tr style="background-color: #f2f2f2;">
                                    <th style="text-align: center; padding: 8px;">Iqama Number</th>
                                    <th style="text-align: center; padding: 8px;">Name</th>
                                    <th style="text-align: center; padding: 8px;">Sponsor Name</th>
                                    <th style="text-align: center; padding: 8px;">Client</th>
                                    <th style="text-align: center; padding: 8px;">Passport No</th>
                                    <th style="text-align: center; padding: 8px;">Border No</th>
                                    <th style="text-align: center; padding: 8px;">Final Clearance Type</th>
                                    <th style="text-align: center; padding: 8px;">Date of Request Completion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs[0]['employees']" t-as="emp_data">
                                    <tr>
                                        <td style="padding: 8px;"><t t-esc="emp_data['iqama_no'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['sponsor_name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['client_name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['passport_no'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['border_no'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['final_clearance_type_label'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="emp_data['processed_date'] and emp_data['processed_date'].strftime('%d-%m-%Y') or ''"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="alert alert-info text-center mt-5">
                            <h3>No matching data found for the selected criteria.</h3>
                            <p>Please adjust the date range, final clearance type, or service request and try again.</p>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>