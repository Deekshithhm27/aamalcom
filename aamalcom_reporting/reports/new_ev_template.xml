<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="new_ev_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1 style="text-align: center; margin-bottom: 20px;">New EV Report</h1>

                    <div style="margin-bottom: 20px; text-align: center;">
                        <p>
                            <strong>Service Request Name:</strong> <t t-esc="service_request_type_fixed_label or 'Issuance of New EV'"/> <br/>
                            <strong>From Date:</strong> <t t-esc="from_date and from_date.strftime('%d-%m-%Y') or ''"/>
                            <t t-if="from_date and to_date">
                                <span> - </span>
                            </t>
                            <strong>To Date:</strong> <t t-esc="to_date and to_date.strftime('%d-%m-%Y') or ''"/>
                        </p>
                    </div>

                    <t t-if="docs and docs[0]['employees']">
                        <table class="table table-sm" style="width:100%; border-collapse: collapse;" border="1">
                            <thead>
                                <tr style="background-color: #f2f2f2;">
                                    <th style="text-align: center; padding: 8px;">Visa No</th>
                                    <th style="text-align: center; padding: 8px;">Iqama No</th>
                                    <th style="text-align: center; padding: 8px;">Date of Issuance</th>
                                    <th style="text-align: center; padding: 8px;">Employee Name</th>
                                    <th style="text-align: center; padding: 8px;">Sponsor Name</th>
                                    <th style="text-align: center; padding: 8px;">Border Number</th>
                                    <th style="text-align: center; padding: 8px;">Passport Number</th>
                                    <th style="text-align: center; padding: 8px;">Nationality</th>
                                    <th style="text-align: center; padding: 8px;">Profession</th>
                                    <th style="text-align: center; padding: 8px;">Religion</th>
                                    <th style="text-align: center; padding: 8px;">Client</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs[0]['employees']" t-as="data_line">
                                    <tr>
                                        <td style="padding: 8px;"><t t-esc="data_line['enquiry_visa_no'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['enquiry_iqama_no'] or data_line['employee_iqama_no'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['enquiry_processed_date'] and data_line['enquiry_processed_date'].strftime('%d-%m-%Y') or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_sponsor_name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['enquiry_identification_id'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_passport_id'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_country_name'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_job_title'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_religion'] or ''"/></td>
                                        <td style="padding: 8px;"><t t-esc="data_line['employee_client_name'] or ''"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t t-else="">
                        <div class="alert alert-info text-center mt-5">
                            <h3>No matching data found for the selected criteria.</h3>
                            <p>Please adjust the date range and try again.</p>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>