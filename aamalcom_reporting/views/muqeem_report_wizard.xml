<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_muqeem_report_wizard_form" model="ir.ui.view">
        <field name="name">muqeem.report.wizard.form</field>
        <field name="model">muqeem.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Muqeem Report">
                <group>
                    <group>
                        <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="service_request"/>
                        <field name="service_request_type"/> </group>
                </group>
                <footer>
                    <button name="print_muqeem_report" string="Print Muqeem Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_muqeem_report_wizard" model="ir.actions.act_window">
        <field name="name">Muqeem Reports</field>
        <field name="res_model">muqeem.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_muqeem_report_wizard"
              name="Muqeem Report"
              parent="menu_reporting_root" action="action_muqeem_report_wizard"
              sequence="10" /> </odoo>