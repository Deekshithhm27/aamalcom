<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qiwa_report_wizard_form" model="ir.ui.view">
        <field name="name">qiwa.report.wizard.form</field>
        <field name="model">qiwa.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate QIWA Report">
                <group>
                    <group>
                        <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="service_request_type_fixed" readonly="1" force_save="1"/>
                    </group>
                </group>
                <footer>
                    <button name="print_qiwa_report" string="Print QIWA Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_qiwa_report_wizard" model="ir.actions.act_window">
        <field name="name">QIWA Reports</field>
        <field name="res_model">qiwa.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_qiwa_report_wizard"
              name="QIWA Report"
              parent="menu_reporting_root"
              action="action_qiwa_report_wizard"
              sequence="6" /> </odoo>