<odoo>
    <record id="view_move_form_inherit_attachment_smart" model="ir.ui.view">
        <field name="name">account.move.form.attachment.smartbutton</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_all_line_attachments"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-paperclip" attrs="{'invisible':[('move_type','!=','entry')]}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Line Attachments</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="inside">
                <field name="attachment_ids" widget="many2many_binary" options="{'no_create': True}" attrs="{'column_invisible': [('parent.move_type', '!=', 'entry')]}"/>
            </xpath>

        </field>
    </record>
</odoo>
