<odoo>
    <record id="view_move_line_form_inherit_attachment" model="ir.ui.view">
        <field name="name">account.move.line.form.attachments</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="attachment_ids" widget="many2many_binary" filename="name"/>
            </xpath>
        </field>
    </record>
</odoo>
