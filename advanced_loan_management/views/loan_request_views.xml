<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--        Loan Request Action-->
        <record id="loan_request_action" model="ir.actions.act_window">
            <field name="name">Loan Request</field>
            <field name="res_model">loan.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--        Loan Request Tree View-->
        <record id="loan_request_view_tree" model="ir.ui.view">
            <field name="name">loan.request.view.tree</field>
            <field name="model">loan.request</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Loan Request">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <!-- <field name="loan_amount"/> -->
                    <field name="interest_rate" invisible="1"/>
                    <field name="date"/>
                    <!-- <field name="tenure"/> -->
                    <field name="company_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--        Sequence Number Loan Request Records-->
        <record id="increment_loan_reference" model="ir.sequence">
            <field name="name">Loan Reference</field>
            <field name="code">increment_loan_ref</field>
            <field name="prefix">LOAN</field>
            <field name="padding">3</field>
        </record>

        <!--        Loan Request Form View-->
        <record id="loan_request_view_form" model="ir.ui.view">
            <field name="name">loan.request.view.form</field>
            <field name="model">loan.request</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Loan Request">
                    <header>
                        <div class="alert alert-info" role="alert"
                             style="height: 40px; margin-bottom:0px;"
                             attrs="{'invisible':[('state', 'not in', 'waiting for approval')]}"
                             groups="advanced_loan_management.loan_management_group_user">
                            Waiting for approval from the manager
                        </div>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,approved"/>
                        <button name="action_loan_request" class="oe_highlight"
                                states="draft" string="Confirm"
                                type="object"/>
                       <!--  <button name="action_compute_repayment" class="oe_highlight"
                                string="Compute Repayments"
                                type="object"  attrs="{'invisible': [('state','!=','approved')]}" groups="visa_process.group_service_request_payroll_manager"/>
                        <button name="action_request_for_loan" class="oe_highlight"
                                states="confirmed" string="Request"
                                type="object"/> -->
                        <button name="action_loan_approved" class="oe_highlight"
                            attrs="{'invisible': ['|',('state','!=','waiting for approval'),('is_my_coach','=',False)]}" string="Approve"
                                type="object"
                                />
                        <button name="action_loan_approved_hr" class="oe_highlight"
                                 string="Approve"
                                type="object"
                                attrs="{'invisible': [('state','!=','waiting_hr_approval')]}" groups="visa_process.group_service_request_hr_manager"/> 
                        <button name="action_loan_approved_gm" class="oe_highlight"
                                 string="Approve"
                                type="object"
                                attrs="{'invisible': [('state','!=','waiting_gm_approval')]}" groups="visa_process.group_service_request_general_manager"/>
                        <button name="action_loan_approved_treasury" class="oe_highlight"
                                 string="Approve"
                                type="object"
                               attrs="{'invisible': [('state','!=','waiting_fm_approval')]}" groups="visa_process.group_service_request_finance_manager"/>
                        <button name="action_loan_rejected" class="btn-danger" 
                            attrs="{'invisible': ['|',('state','!=','waiting for approval'),('is_my_coach','=',False)]}" string="Reject"
                                type="object"
                                />
                        <button name="action_loan_rejected" class="btn-danger"
                                 string="Reject"
                                type="object"
                                attrs="{'invisible': [('state','!=','waiting_hr_approval')]}" groups="visa_process.group_service_request_hr_manager"/> 
                        <button name="action_loan_rejected" class="btn-danger"
                                 string="Reject"
                                type="object"
                                attrs="{'invisible': [('state','!=','waiting_gm_approval')]}" groups="visa_process.group_service_request_general_manager"/>
                        <button name="action_loan_rejected" class="btn-danger"
                                 string="Reject"
                                type="object"
                               attrs="{'invisible': [('state','!=','waiting_fm_approval')]}" groups="visa_process.group_service_request_finance_manager"/>
                        <button name="action_resubmit" lass="oe_highlight" string="Re-Submit" attrs="{'invisible': [('state','not in',('rejected'))]}"
                                type="object"
                                groups="advanced_loan_management.loan_management_group_user"/>
                        
                        <button name="action_disburse_loan" class="oe_highlight"
                                string="Disburse"
                                type="object" states="approved" groups="visa_process.group_service_request_payroll_manager"/>
                        <button name="action_close_loan" class="oe_highlight"
                                string="Close"
                                type="object"
                                states="disbursed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button name="action_view_treasury_requests"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money"
                            groups="visa_process.group_service_request_finance_manager"
                            attrs="{'invisible': [('total_treasury_requests', '=', 0)]}">
                            <field name="total_treasury_requests" widget="statinfo" string="Treasury Requests"/>
                        </button>
                    </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" style="width: 50%%;"
                                       placeholder="Loan Type"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" string="Employee" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}" invisible="1"/>
                                <field name="employee_id"/>
                                <field name="loan_type_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_open': True}"/> 
                                <field name="date"/>
                                <field name="employee_id" invisible="1"/>
                                <field name="is_my_coach" invisible="1"/>
                                <field name="is_payroll_manager" invisible="1"/>
                                <field name="is_finance_manager" invisible="1"/>
                            </group>
                            <group>
                                <field name="tenure" invisible="1"
                                       />
                                <field name="disbursal_amount" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="request" invisible="1"/>
                            </group>
                            <group>
                                <field name="reason_for_loan" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="loan_amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="interest_rate" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Repayment schedules"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'confirmed', 'waiting for approval','waiting_hr_approval','waiting_fm_approval','waiting_gm_approval'])]}">
                                <field name="repayment_lines_ids" readonly="1">
                                    <tree string="tree" create="false">
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="amount" invisible="1"/>
                                        <field name="interest_amount" invisible="1"/>
                                        <field name="total_amount"/>
                                        <field name="state"
                                               attrs="{'column_invisible': [('parent.state', '!=', 'disbursed')]}"
                                               widget="badge"
                                               optional="show"
                                               decoration-danger="state == 'unpaid'"
                                               decoration-warning="state == 'invoiced'"
                                               decoration-success="state == 'paid'"/>
                                        <field name="invoice" invisible="1"/>
                                        <button attrs="{'invisible': ['|', '|', ('invoice', '=', True),
                                           ('state', '!=', 'unpaid'), ('parent.state', '!=', 'disbursed')]}"
                                                name="action_pay_emi"
                                                class="oe_highlight"
                                                string="Pay"
                                                type="object"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents">
                                <group>
                                    <field name="documents_ids"
                                           widget="many2many_tags"/>
                                    <!-- <field name="img_attachment_ids"
                                           widget="many2many_binary"/> -->
                                </group>
                                <group>
                                    <field name="upload_document_one" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="upload_document_two" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="upload_document_three" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="upload_document_four" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                            </page>
                            <page string="Loan rejection" states="rejected">
                                <field name="reject_reason" readonly="1"/>
                            </page>
                            <page string="Accounting"
                                  attrs="{'invisible': [('state', '=', 'draft')]}">
                                <group>
                                    <group>
                                        <field name="journal_id"
                                               attrs="{ 'readonly': ['|',('state', '=', 'disbursed'),('is_finance_manager','=',False)]}"/>
                                    </group>
                                    <group>
                                        <field name="debit_account_id"
                                               attrs="{'required': [('state', '=', 'approved')], 'readonly': ['|',('state', '=', 'disbursed'),('is_payroll_manager','=',False)]}"/>
                                        <field name="credit_account_id"
                                               attrs="{'required': [('state', '=', 'approved')], 'readonly': ['|',('state', '=', 'disbursed'),('is_payroll_manager','=',False)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
</odoo>
