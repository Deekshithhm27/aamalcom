<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_recruitment_hiring_request_form" model="ir.ui.view">
        <field name="name">recruitment.hiring.request.form</field>
        <field name="model">recruitment.hiring.request</field>
        <field name="arch" type="xml">
            <form string="Hiring Request">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,done,cancel"/>
                    <button string="Submit" name="action_submit" type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                        groups="aamalcom_hr_recruitment.group_hiring_request_user"/>
                    
                    <!-- Recruiter buttons -->
                    <button string="Approve" name="action_officer_approve" type="object" class="btn-success"
                        attrs="{'invisible': [('state', '!=', 'submitted')]}"
                        groups="hr_recruitment.group_hr_recruitment_user"/>
                    <button string="Reject" name="action_recruiter_reject" type="object" class="btn-danger"
                        attrs="{'invisible': [('state', '!=', 'submitted')]}"
                        groups="hr_recruitment.group_hr_recruitment_user"/>

                    <!-- Admin -->
                    <button string="Approve" name="action_admin_approve" type="object" class="btn-success"
                        attrs="{'invisible': [('state', '!=', 'recruiter_approved')]}"
                        groups="hr_recruitment.group_hr_recruitment_manager"/>
                    <button string="Reject" name="action_admin_reject" type="object" class="btn-danger"
                        attrs="{'invisible': [('state', '!=', 'recruiter_approved')]}"
                        groups="hr_recruitment.group_hr_recruitment_manager"/>

                    <!-- GM -->
                    <button string="Approve" name="action_gm_approve" type="object" class="btn-success"
                        attrs="{'invisible': [('state', '!=', 'admin_approved')]}"
                        groups="visa_process.group_service_request_general_manager"/>
                    <button string="Reject" name="action_gm_reject" type="object" class="btn-danger"
                        attrs="{'invisible': [('state', '!=', 'admin_approved')]}"
                        groups="visa_process.group_service_request_general_manager"/>

                    <!-- Resume Collection & Interview Buttons -->
                    <button string="Start Resume Collection" name="action_start_resume_collection" type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'gm_approved')]}"
                        groups="hr_recruitment.group_hr_recruitment_user"/>

                    <button string="Initiate Interview Process" name="action_initiate_interview_process" type="object" class="btn-primary"
                        attrs="{'invisible': [('state', 'not in', ('interviews','resumes_collecting'))]}"
                        groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

                    <button string="Completed" name="action_complete" type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'interviews')]}"
                        groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>

                    <button string="Cancel" name="action_cancel" type="object" class="btn-secondary"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                        groups="aamalcom_hr_recruitment.group_hiring_request_user"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                         <button name="%(aamalcom_hr_recruitment.action_hr_recruitment_applicant)d" type="action" string="Job Applications" icon="fa-users" attrs="{'invisible': [('state', 'not in', ['resumes_collecting', 'interviews', 'done'])]}"/>
                    </div>
                    <div class="oe_title mb24">
                        <h1>
                           <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="job_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="linked_hr_job_id" invisible="1" readonly="1" groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"/>
                            <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="number_of_positions" required="1" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                        </group>
                        <group>
                            <field name="requested_by" readonly="1"/>
                            <field name="date_request" readonly="1"/>
                        </group>
                    </group>
                    <group>

                        <field name="description" attrs="{'readonly': [('state','not in',('draft','submitted'))]}"/>
                        
                        <field name="reject_reason" attrs="{'invisible': [('reject_reason','=',False)]}" readonly="1" widget="text"/>
                    </group>

                    <!-- Smart Button: Resumes (Job Applicants) -->
                    <notebook position="after">
                        <page string="Resumes" attrs="{'invisible': [('state', 'not in', ['resumes_collecting', 'interviews'])]}">
                            <field name="resume_ids" context="{'default_hiring_request_id': active_id}">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="name" attrs="{'readonly': [('state', '!=','new')]}"/>
                                    <field name="attachment" filename="filename" widget="binary" attrs="{'readonly': [('state', '!=','new')]}"/>
                                    <field name="email" attrs="{'readonly': [('state', '!=','new')]}"/>
                                    <field name="uploaded_by"/>
                                    <field name="upload_date"/>
                                    <field name="state" readonly="1" force_save="1"/>
                                    <button name="action_shortlist" string="Shortlist" type="object" icon="fa-check"
                                        attrs="{'invisible': [('state', 'in', ['shortlisted', 'rejected'])]}"/>
                                    <button name="action_reject" string="Reject" type="object" icon="fa-times"
                                        attrs="{'invisible': [('state', 'in', ['shortlisted', 'rejected'])]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_recruitment_hiring_request_tree" model="ir.ui.view">
        <field name="name">recruitment.hiring.request.tree</field>
        <field name="model">recruitment.hiring.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="job_id"/>
                <field name="number_of_positions"/>
                <field name="requested_by"/>
                <field name="state"/>
                <field name="date_request"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_recruitment_hiring_request" model="ir.actions.act_window">
        <field name="name">Hiring Requests</field>
        <field name="res_model">recruitment.hiring.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create new hiring requests to start recruitment process.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_aamalcom_hr_recruitment_root" name="Hiring Requests" sequence="55"/>
    <menuitem id="menu_aamalcom_hr_recruitments" name="Hiring Requests" parent="menu_aamalcom_hr_recruitment_root" action="action_recruitment_hiring_request" sequence="10"/>
</odoo>