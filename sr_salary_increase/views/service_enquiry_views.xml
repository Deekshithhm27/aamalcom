<odoo>
    <record id="service_enquiry_form_inherit_for_service" model="ir.ui.view">
        <field name="name">service.enquiry.form.request</field>
        <field name="model">service.enquiry</field>
        <field name="inherit_id" ref="visa_process.service_enquiry_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_submit" string="Submit" type="object" class="oe_highlight" 
                        attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('service_request', '!=', 'salary_increase_process')]}"/>
                 <button name="action_salary_increase_submit_for_approval" string="Submit for Approval" type="object" class="btn-primary" attrs="{'invisible': ['|', ('state', '!=', 'submitted'), ('service_request', '!=', 'salary_increase_process')]}" groups="visa_process.group_service_request_manager"/>
                 <button name="action_first_govt_emp_submit_salary" string="Submit to PM" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'submitted'), '|', ('upload_qiwa_doc', '=', False),  ('service_request', '!=', 'salary_increase_process')]}" groups="visa_process.group_service_request_employee"/>
                 <button name="action_second_govt_emp_submit_salary" string="Submit to Payroll Manager" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'submitted'), '|', ('upload_gosi_doc', '=', False),  ('service_request', '!=', 'salary_increase_process')]}" groups="visa_process.group_service_request_employee"/>
                 <button name="action_process_complete" string="Process Complete" type="object" class="oe_highlight"  attrs="{'invisible': ['|', ('state', '=', 'done'), '|', ('service_request', '!=', 'final_clearance'),('upload_stating_doc', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook[@id='notebook_four']" position="before">
                <group name="final_exit" attrs="{'invisible': [('service_request', '!=', 'salary_increase_process')]}">
                    <group>
                        <field name="doj" readonly="1"/>
                        <field name="year_of_service" readonly="1"/>
                        <field name="salary_increase"/>
                    </group>
                </group>
    
            </xpath>
            <xpath expr="//notebook[@id='service_pricing_notebook']" position="before">
                <group string="Payment Confirmation Documents" attrs="{'invisible': ['|', ('service_request', '!=', 'medical_blood_test'), ('state', 'in', ('draft', 'submitted'))]}">
                        <group >
                            <field name="upload_payment_doc" attrs="{'readonly': [('state', '!=','payment_initiation')]}" filename="upload_payment_doc_file_name"/>
                            <field name="upload_payment_doc_file_name"  invisible="1"/>
                            <field name="payment_doc_ref" attrs="{'readonly': [('state', '!=','payment_initiation')]}"/>
                        </group>
                    </group>
                <group attrs="{'invisible': ['|', 
                          ('service_request', '!=', 'salary_increase_process'), 
                          ('state', 'not in', ('payment_done', 'done', 'approved')), 
                          ]}"> 
                <group>
                        <field name="upload_qiwa_doc" 
                        filename="upload_qiwa_doc_file_name"
                            force_save="1"  attrs="{'readonly': [('state', '!=','approved')]}"/>
                            <field name="upload_qiwa_doc_file_name" invisible="1"/>
                            <field name="qiwa_doc_ref" string="Ref No.*"
                                force_save="1" attrs="{'readonly': [('state', '!=','approved')]}"/>
                        </group>
                    </group>
                <group attrs="{'invisible': ['|', 
                          ('service_request', '!=', 'salary_increase_process'), 
                          ('state', 'not in', ('payment_done', 'done', 'approved','doc_uploaded_by_first_govt_employee')), 
                          ]}"> 
                <group>
                        <field name="upload_gosi_doc" 
                        filename="upload_gosi_doc_file_name"
                            force_save="1"  attrs="{'readonly': [('state', '!=','doc_uploaded_by_first_govt_employee')]}"/>
                            <field name="upload_gosi_doc_file_name" invisible="1"/>
                            <field name="gosi_doc_ref" string="Ref No.*"
                                force_save="1" attrs="{'readonly': [('state', '!=','doc_uploaded_by_first_govt_employee')]}"/>
                        </group>
                    </group>
                <group attrs="{'invisible': ['|', 
                          ('service_request', '!=', 'salary_increase_process'), 
                          ('state', 'not in', ('done', 'waiting_payroll_approval')), 
                          ]}"> 
                <group>
                        <field name="upload_stating_doc" 
                        filename="upload_stating_doc_file_name"
                            force_save="1"  attrs="{'readonly': [('state', '!=','waiting_payroll_approval')]}"/>
                            <field name="upload_stating_doc_file_name" invisible="1"/>
                            <field name="stating_doc_ref" string="Ref No.*"
                                force_save="1" attrs="{'readonly': [('state', '!=','waiting_payroll_approval')]}"/>
                        </group>
                    </group>
            </xpath>
            <xpath expr="//button[@id='open_assign_employee_wizard_one']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('service_request', '=', 'salary_increase_process'), '|', ('state', '!=', 'submitted'), '|', ('assign_govt_emp_one', '=', False), '|', ('assigned_govt_emp_one', '=', True), ('service_request', 'in', ('iqama_card_req', 'new_ev','exit_reentry_issuance_ext','dependents_ere','medical_blood_test','salary_increase_process'))]}</attribute>
                </xpath>
                <xpath expr="//widget[@name='web_ribbon']" position="attributes">
                <attribute name="attrs">
                {'invisible': ['|', ('service_request', '=', 'salary_increase_process'), '|',('state','!=','submitted'), '|',('assign_govt_emp_one','=',False), ('assigned_govt_emp_one','=',True)]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
