<odoo>
    
    <!-- Probation Extend Requests tree view -->
    <record id="view_probation_extend_request_tree" model="ir.ui.view">
        <field name="name">hr.probation.extend.request.tree</field>
        <field name="model">hr.probation.extend.request</field>
        <field name="arch" type="xml">
            <tree string="Probation Extend Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="manager_id"/>
                <field name="current_probation_end_date"/>
                <field name="extend_term"/>
                <field name="hr_recommendation"/>
                <field name="employee_acceptance"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_probation_extend_request_form" model="ir.ui.view">
        <field name="name">hr.probation.extend.request.form</field>
        <field name="model">hr.probation.extend.request</field>
        <field name="arch" type="xml">
            <form string="Probation Extend Request">
            	<header>
            		<field name="state" widget="statusbar"/>
            		<button string="Submit Request" type="object" name="action_submit_request" attrs="{'invisible': [('state', '!=', 'draft')]}" class="btn-primary" groups="aamalcom_hr_operations.group_hr_employee_internal"/>
                    <button string="Reviewed" type="object" name="action_hr_review" attrs="{'invisible': [('state', '!=', 'submitted')]}" groups="visa_process.group_service_request_hr_manager"/>
                    <button string="Employee Accept" type="object" name="action_employee_confirm" groups="aamalcom_hr_operations.group_hr_employee_internal" attrs="{'invisible': ['|',('state','!=','employee_confirm'),('employee_acceptance','!=','pending')]}" context="{'acceptance':'accept'}"/>
                    <button string="Employee Reject" type="object" name="action_employee_confirm" groups="aamalcom_hr_operations.group_hr_employee_internal" attrs="{'invisible': ['|',('state','!=','employee_confirm'),('employee_acceptance','!=','pending')]}" context="{'acceptance':'reject'}"/>
                    <button string="Close Request" type="object" name="action_hr_close" attrs="{'invisible': [('state', '!=', 'done')]}" class="btn-success" groups="visa_process.group_service_request_hr_manager"/>
                    <button string="Cancel" type="object" name="action_cancel" attrs="{'invisible': [('state', 'not in', ('draft','submitted'))]}" class="btn-secondary"/>
            	</header>
                <sheet>
                	<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                	<div class="oe_title mb24">
                        <h1>
                           <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
	                    <group>
	                        <field name="employee_id" options="{'no_create': True}" attrs="{'readonly': [('state','!=','draft')]}"/>
	                        <field name="manager_id" readonly="1"/>
	                        <field name="current_probation_term" readonly="1"/>
	                        <field name="current_probation_end_date" readonly="1"/>
	                        <field name="extend_term" attrs="{'readonly': [('state','!=','draft')]}"/>
	                        <field name="request_date" readonly="1"/>
	                    </group>
	                    <group string='HR'>
	                    	<field name="hr_manager_id" attrs="{'readonly': [('state','!=','draft')]}"/>
	                    	<field name="hr_recommendation" attrs="{'readonly': [('state','not in',['submitted','hr_review'])]}" widget="selection" groups="visa_process.group_service_request_hr_manager"/>
	                    </group>
	                    <group string="Employee">
	                        <field name="employee_acceptance" readonly="1"/>
	                        <field name="letter_pdf" filename="letter_filename" widget="binary" readonly="1"/>
	                        <field name="contract_id" readonly="1" groups="visa_process.group_service_request_hr_manager"/>
	                        <field name="user_id" invisible="1"/>
	                        <field name="active" invisible="1"/>
	                        <field name="company_id" invisible="1"/>
	                    </group>
	                </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for Probation Extend Requests -->
    <record id="action_probation_extend_request" model="ir.actions.act_window">
        <field name="name">Probation Extend Requests</field>
        <field name="res_model">hr.probation.extend.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create probation extension requests here.</p>
        </field>
    </record>
    
</odoo>
