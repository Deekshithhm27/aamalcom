<odoo>
    <data>

        <record id="action_onboarding_checklist" model="ir.actions.act_window">
            <field name="name">Onboarding Checklist</field>
            <field name="res_model">hr.onboarding.checklist</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new onboarding checklist here.
                </p>
            </field>
        </record>

        <record id="view_onboarding_checklist_tree" model="ir.ui.view">
            <field name="name">hr.onboarding.checklist.tree</field>
            <field name="model">hr.onboarding.checklist</field>
            <field name="arch" type="xml">
                <tree string="Onboarding Checklist">
                    <field name="sequence" widget="handle"/>
                    <field name="ref_id" invisible="1"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="view_onboarding_checklist_form" model="ir.ui.view">
        <field name="name">hr.onboarding.checklist.form</field>
        <field name="model">hr.onboarding.checklist</field>
        <field name="arch" type="xml">
        <form string="Onboarding Checklist">
            <sheet>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                
                <group>
                    <field name="user_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="ref_id" invisible="1"/>
                </group>
                <group>
                    <field name="name" string="Name"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

    </data>
</odoo>