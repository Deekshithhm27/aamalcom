<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view -->
    <record id="view_hr_employee_change_request_tree" model="ir.ui.view">
        <field name="name">hr.employee.change.request.tree</field>
        <field name="model">hr.employee.change.request</field>
        <field name="arch" type="xml">
            <tree string="Employee Change Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="change_type"/>
                <field name="new_value"/>
                <field name="state"/>
                <field name="requested_by"/>
                <field name="approved_by"/>
                <field name="approval_date"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_hr_employee_change_request_form" model="ir.ui.view">
        <field name="name">hr.employee.change.request.form</field>
        <field name="model">hr.employee.change.request</field>
        <field name="arch" type="xml">
            <form string="Employee Change Request">
            	<header>
            		<field name="state" widget="statusbar"/>
            		<button name="action_submit" string="Submit" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'pending')]}" groups="visa_process.group_service_request_hr_manager"/>
                        <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'pending')]}" groups="visa_process.group_service_request_hr_manager"/>
            	</header>
                <sheet>
                	<widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                	<div class="oe_title mb24">
                        <h1>
                           <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
	                    <group>
	                        <field name="employee_id" readonly="1"/>
	                        <field name="change_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
	                        <field name="current_value" force_save="1"/>
	                        <field name="new_value" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
	                        <field name="reason" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
	                    </group>
	                    <group>
	                        <field name="requested_by" readonly="1"/>
	                        <field name="approved_by" readonly="1"/>
	                        <field name="approval_date" readonly="1"/>
	                        <field name="is_hr_manager" invisible="1"/>
	                        <field name="current_user_id" invisible="1"/>
	                        <field name="user_id" invisible="1"/>
	                        <field name="active" invisible="1"/>
	                        <field name="company_id" invisible="1"/>
	                    </group>
	                </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="action_hr_employee_change_requests" model="ir.actions.act_window">
        <field name="name">Employee Change Requests</field>
        <field name="res_model">hr.employee.change.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new employee information change request.
            </p>
        </field>
    </record>

    <!-- Action filtered by particular employee -->
    <record id="action_hr_employee_change_requests_by_employee" model="ir.actions.act_window">
        <field name="name">Employee Change Requests</field>
        <field name="res_model">hr.employee.change.request</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id','=',active_id)]</field>
    </record>
</odoo>