<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Add smart button to hr.employee form -->
    <record id="view_hr_employee_form_inherit_change_request_button" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.change.request.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_hr_employee_change_requests_by_employee)d" type="action" icon="fa-info-circle" class="oe_stat_button" attrs="{'invisible': [('employee_change_request_count', '=', 0)]}">

                    <field name="employee_change_request_count" widget="statinfo" options="{'no_label': True}"/>
                </button>
            </xpath>
            <xpath expr="//sheet" position="before">
                <field name="employee_change_request_count" invisible="1"/>
            </xpath>
        </field>
    </record>

    
</odoo>