<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_business_trip_view_tree" model="ir.ui.view">
        <field name="name">hr.business.trip.view.tree</field>
        <field name="model">hr.business.trip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="hr_business_trip_view_form" model="ir.ui.view">
        <field name="name">hr.business.trip.view.form</field>
        <field name="model">hr.business.trip</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit_to_hr,submit_to_review,acceptance_resignation"/>
                    <button name="action_submit_to_hr" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'),('upload_business_trip_form','=',False)]}"/>
                    <button name="action_approved_by_hr" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submit_to_hr')]}" groups="visa_process.group_service_request_hr_manager"/>
                    <button name="action_approved_by_fm" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submit_to_fm')]}" groups="visa_process.group_service_request_finance_manager"/>
                    <button name="action_approved_by_gm" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'submit_to_gm')]}" groups="visa_process.group_service_request_general_manager"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <group>
                        <group>
                            <field name="employee_id" readonly="1" force_save="1"/>
                            <field name="iqama_no" readonly="1"/>
                            <field name="identification_id" readonly="1"/>
                            <field name="passport_no" readonly="1"/>
                            <field name="sponsor_id" readonly="1"/>
                            
                        </group>
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <field name="name" invisible="1"/>
                        </group>
                    </group>

                        <group>  
                        
                            <field name="reason_of_business_trip" string="Reason for Business Trip" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="businees_trip_type" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="upload_business_trip_form" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        </group>
                        
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_hr_business_trip_request" model="ir.actions.act_window">
            <field name="name">Business Trip Request</field>
            <field name="res_model">hr.business.trip</field>
            <field name="view_mode">tree,form</field>
        </record>
</odoo>