<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_ere_request_view_tree" model="ir.ui.view">
        <field name="name">hr.exit.reentry.view.tree</field>
        <field name="model">hr.exit.reentry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="hr_ere_view_form" model="ir.ui.view">
        <field name="name">Exit Reentry Issuance</field>
        <field name="model">hr.exit.reentry</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done"/>
                    
                    <button name="action_submit_ere" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'),('aamalcom_pay','!=',True)]}"/>

                    <button name="action_submit_if_employee" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'draft'),('employee_pay','!=',True)]}"/>

                    
                    <button name="action_approval_dept" string="Approve" type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|',('state', '!=', 'submit_to_dept_head'),('is_my_coach','!=',True)]}"/>
                    
                    <button name="action_approval_hr" string="Approve" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'approved_by_dept_head')]}" 
                            groups="visa_process.group_service_request_hr_manager"/>
                    
                    <button name="action_approval_gm" string="Approve" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'submit_to_gm')]}" 
                            groups="visa_process.group_service_request_general_manager"/>
                    
                    <button name="%(action_assign_employee_medical_wizard)d"
                        string="Assign Employee"
                        type="action"
                        class="btn-primary"
                        attrs="{'invisible': [('state', 'not in', ('approved','submit'))]}"
                        groups="visa_process.group_service_request_hr_manager"/>

                    <button name="action_approval_fm" string="Approve" type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'submit_to_fm')]}" 
                            groups="visa_process.group_service_request_finance_manager"/>
                    
                    <button name="action_done_ere" string="Process Done" type="object" class="oe_highlight" 
                            attrs="{'invisible': ['|','|',('state', '!=', 'submitted_to_gre'),('upload_confirmation_of_exit_reentry','=',False),('upload_exit_reentry_visa','=',False)]}" 
                            groups="visa_process.group_service_request_employee"/> 
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'approved_by_dept_head')]}" groups="visa_process.group_service_request_hr_manager"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': ['|',('state', '!=', 'submit_to_dept_head'),('is_my_coach','=',False)]}"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'submit_to_gm')]}" groups="visa_process.group_service_request_general_manager"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'submit_to_fm')]}" groups="visa_process.group_service_request_finance_manager"/>
                    <button name="action_resubmit" string="Re-Submit" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'refuse'),('is_submit_visible','=',False)]}" />
                   
                    
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_treasury_requests"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-money"
                            groups="visa_process.group_service_request_finance_manager"
                            attrs="{'invisible': [('total_treasury_requests', '=', 0)]}">
                            <field name="total_treasury_requests" widget="statinfo" string="Treasury Requests"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="service_request_config_id" attrs="{'readonly': [('state', '!=','draft')]}" options="{'no_create': True,'no_edit':True,'no_open':True}"/>
                            <field name="service_request" invisible="1"/>
                            <field name="iqama_no" readonly="1"/>
                            <field name="identification_id" readonly="1"/>
                            <field name="passport_no" readonly="1"/>
                            <field name="sponsor_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <field name="name" invisible="1"/>
                            <field name="is_my_coach" invisible="1"/>
                            <field name="is_hr_employee" invisible="1"/>
                            <field name="is_gov_employee" invisible="1"/>
                            <field name="is_gov_employee" invisible="1"/>
                            <field name="service_request" invisible="1"/>
                            <field name="is_submit_visible" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="exit_type" attrs="{'readonly': [('state', '!=','draft')]}" force_save="1"/>
                            <field name="employment_duration" attrs="{'readonly': [('state', '!=','draft')]}"
                                options="{'no_create': True, 'no_edit': True}"/>

                        </group>
                        <group>
                            <field name="to_be_issued_date" string="Exit Date" attrs="{'readonly': [('state', '!=','draft')]}"/>
                            <field name="total_amount_from_pricing" readonly="1"/> 
                        </group>
                    </group>
                    
                    <group>
                        <group string="Fees to be paid by">
                            <field name="aamalcom_pay" string="Aamalcom" attrs="{'readonly': [('state', '!=','draft')]}" />
                            <field name="employee_pay"  attrs="{'readonly': [('state', '!=','draft')], 'invisible': [('employee_id', '=', False)]}" />
                        </group>
                        <group string="Billing Details" attrs="{'invisible':[('aamalcom_pay','=',False)]}">
                            <field name="billable_to_aamalcom" string="Aamalcom" attrs="{'readonly': [('state', '!=','draft')]}"/>
                        </group>
                    </group>
                    <group string="Payment Confirmation Document" 
                           attrs="{'invisible': ['|',('state', 'not in', ('submitted_to_gre', 'done', 'approved')),('aamalcom_pay', '!=', True)]}">
                        <group>
                            <field name="treasury_confirmation_doc" readonly="1" filename="treasury_confirmation_ref"/>
                            <field name="treasury_confirmation_ref" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Documents Upload" 
                           attrs="{'invisible': [ ('state', 'not in', ('submitted_to_gre','done'))]}" >
                
                    </group>
                   <group>
    <field name="payment_doc" attrs="{'invisible': [('employee_pay', '!=', True)],'readonly': [('state', '!=', 'draft')]}" />
</group>

                    
                    <group  attrs="{'invisible': [ ('state', 'not in', ('submitted_to_gre','done'))]}" >
                        <group>
                            <field name="upload_confirmation_of_exit_reentry" filename="upload_confirmation_of_exit_reentry_file_name" attrs="{'readonly': ['|', ('state', '!=', 'submitted_to_gre'),('is_gov_employee','!=',True)]}"/>
                            <field name="upload_confirmation_of_exit_reentry_file_name" invisible="1" />
                            <field name="confirmation_of_exit_reentry_ref" attrs="{'readonly': ['|', ('state', '!=', 'submitted_to_gre'),('is_gov_employee','!=',True)]}"/>
                        </group>
                        <group>
                            <field name="upload_exit_reentry_visa" filename="upload_exit_reentry_visa_file_name" attrs="{'readonly': ['|', ('state', '!=', 'submitted_to_gre'),('is_gov_employee','!=',True)]}"/>
                            <field name="upload_exit_reentry_visa_file_name" invisible="1"/>
                            <field name="exit_reentry_visa_ref" attrs="{'readonly': ['|', ('state', '!=', 'submitted_to_gre'),('is_gov_employee','!=',True)]}"/>
                        </group>
                    </group>


                    
                </sheet>
                <!-- <sheet>
                <notebook>
                    <page string="Service Pricing">
                        <field name="service_enquiry_pricing_ids">
                            <tree editable="bottom">
                                <field name="service_enquiry_id" invisible="1"/>
                                <field name="name"/>
                                <field name="service_pricing_id" domain="[('service_request','=',parent.service_request),('service_request','=',parent.service_request)]" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount" sum="Total"/>
                                <field name="remarks"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet> -->
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
            
        </field>
    </record>

    <record id="action_hr_ere_request" model="ir.actions.act_window">
        <field name="name">Exit Reentry Issuance Request</field>
        <field name="res_model">hr.exit.reentry</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>