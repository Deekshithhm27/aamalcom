<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_assign_employee_medical_wizard" model="ir.ui.view">
        <field name="name">assign.employee.medical.wizard.form</field>
        <field name="model">assign.employee.medical.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Employee">
                
                <group>
                    <field name="department_id"/>
                    <field name="employee_id"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_employee_medical_wizard" model="ir.actions.act_window">
        <field name="name">Assign Employee for Medical Test</field>
        <field name="res_model">assign.employee.medical.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        </record>
</odoo>