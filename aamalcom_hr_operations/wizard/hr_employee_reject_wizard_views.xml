<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_employee_change_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.change.request.reject.wizard.form</field>
        <field name="model">hr.employee.change.request.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Change Request">
                <group>
                    <field name="reject_reason" widget="text" placeholder="Please enter reason for rejection" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>