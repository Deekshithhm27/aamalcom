<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_employee_change_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.change.request.reject.wizard.form</field>
        <field name="model">hr.employee.change.request.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Change Request">
                <group>
                    <field name="reject_reason" widget="text" placeholder="Please enter reason for rejection" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_confirm_reject" model="ir.actions.act_window">
        <field name="name">Reject Employee Change Request</field>
        <field name="res_model">hr.employee.change.request.reject.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_hr_employee_change_request_reject_wizard_form"/>
    </record>

</odoo>