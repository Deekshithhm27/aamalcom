<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Parent menu -->
    <menuitem
        id="menu_documents_section"
        name="Documents"
        parent="visa_process.menu_base_visa_process"
        sequence="5"
        groups="visa_process.group_service_request_employee,visa_process.group_service_request_administrator,visa_process.group_service_request_manager"
    />
    <record id="action_qiwa_document" model="ir.actions.act_window">
        <field name="name">Iqama Card Generation</field>
        <field name="res_model">qiwa.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Iqama Card
            </p>
        </field>
    </record>
    <record id="action_qiwa_document_manager" model="ir.actions.act_window">
    <field name="name">Iqama Card Generated</field>
    <field name="res_model">qiwa.document</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'create': 0}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            No records found.
        </p>
    </field>
    </record>

    <!-- Employee/Admin menu -->
    <menuitem id="menu_qiwa_documents"
              name="Iqama Card Generation"
              parent="menu_documents_section"
              action="action_qiwa_document"
              groups="visa_process.group_service_request_employee,visa_process.group_service_request_administrator"
              sequence="10"/>

    <!-- Manager menu -->
    <menuitem id="menu_qiwa_documents_manager_readonly"
              parent="menu_documents_section"
              action="action_qiwa_document_manager"
              groups="visa_process.group_service_request_manager"
              sequence="11"/>
</odoo>
