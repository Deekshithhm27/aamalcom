<?xml version="1.0" encoding="utf-8"?>
	<odoo>
	<data>
		<record id="hr_service_request_treasury_form" model="ir.ui.view">
			<field name="name">hr.service.request.treasury.form</field>
			<field name="model">hr.service.request.treasury</field>
			<field name="arch" type="xml">
		<form string="Treasury Details">
		<header>
			<field name="state" widget="statusbar" statusbar_visible="draft,submitted,done"/>
			<button name="action_submit" string="Submit to Treasury" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
			<button name="action_upload_confirmation" string="Upload Confirmation" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'submitted'),('confirmation_doc','=',False)]}"/>
			<button name="action_update_treasury" 
                        string="Update by Treasury" 
                        type="object" 
                        class="oe_highlight" 
                        attrs="{'invisible': ['|',('state', '!=', 'passed_to_treasury'),('total_amount', '=', 0)]}"/>
		</header>
	<sheet>
		<div class="oe_title">
		<!-- <h1>
			<field name="name" readonly="1"/>
		</h1> -->
		</div>
		<group>
			<group>
    <group>
        <label for="service_request_ref" string="Service Request ID"/>
        <div>
            <field name="service_request_ref" widget="reference" readonly="1" nolabel="1" class="oe_inline"/>
        </div>
        <field name="employee_id" readonly="1"/>
        <field name="service_type" readonly="1"/>
        <field name="total_amount" attrs="{'readonly': [('state', '!=', 'passed_to_treasury')]}"/>
        <field name="clinic_name" 
        attrs="{'readonly': [('state', '!=', 'passed_to_treasury')],'invisible': [('service_type', '!=', 'iqama_issuance')]}"/>
		<field name="currency_id" invisible="1"/>
    </group>
    </group>
				

	</group>
	<notebook>
		<page string="Documents">
		<group>
			<group string="Confirmation Document">
			<field name="confirmation_doc" attrs="{'readonly': [('state', '!=', 'submitted')]}"/>
			<field name="confirmation_doc_ref" attrs="{'readonly': [('state', '!=', 'submitted')]}"/>
			<field name="issue_date" attrs="{'readonly': [('state', '!=', 'submitted')]}"/>
			</group>
			</group>
		</page>
		</notebook>
	</sheet>
	<div class="oe_chatter">
	<field name="message_follower_ids" widget="mail_followers"/>
	<field name="activity_ids"/>
	<field name="message_ids" widget="mail_thread"/>
	</div>
	</form>
	</field>
	</record>

		<record id="hr_service_request_treasury_tree" model="ir.ui.view">
			<field name="name">hr.service.request.treasury.tree</field>
			<field name="model">hr.service.request.treasury</field>
			<field name="arch" type="xml">
			<tree string="Treasury Details">
			<field name="service_request_ref"/>  <field name="employee_id"/>
			<field name="total_amount"/>
			<field name="state"/>
	</tree>
	</field>
	</record>

		<record id="hr_service_request_treasury_search" model="ir.ui.view">
		<field name="name">hr.service.request.treasury.search</field>
		<field name="model">hr.service.request.treasury</field>
		<field name="arch" type="xml">
		<search string="Search Treasury Details">
		<field name="name"/>
		<field name="service_request_ref"/>  <field name="employee_id"/>
		<field name="state"/>
		<filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
		<filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
		<filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
		</search>
		</field>
		</record>

		<record id="action_hr_service_request_treasury" model="ir.actions.act_window">
		<field name="name">All Treasury Records</field> <field name="res_model">hr.service.request.treasury</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'create': False}</field>
		</record>

</data>
</odoo>