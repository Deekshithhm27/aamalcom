<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_internal_payslip_approval" model="ir.actions.act_window">
        <field name="name">InternalEmployeePayslip</field>
        <field name="res_model">internal.payslip.approval</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View -->
    <record id="view_internal_payslip_approval_tree" model="ir.ui.view">
        <field name="name">internal.payslip.approval.tree</field>
        <field name="model">internal.payslip.approval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_internal_payslip_approval_form" model="ir.ui.view">
        <field name="name">InternalEmployeePayslipApproval</field>
        <field name="model">internal.payslip.approval</field>
        <field name="arch" type="xml">
            <form string="Approval Client Payslip">
                <!-- Statusbar -->
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done"/>
                    <button name="action_submit_to_payroll"
                            string="Submit to Payroll"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state','!=','draft')]}" groups="visa_process.group_service_request_hr_employee"/>

                    <button name="action_submit_to_hr_employee"
                            string="Submit to HR Employee"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state','!=','submit_to_payroll')]} " groups="visa_process.group_service_request_payroll_manager"/>
                    <button name="action_submit_to_hr_manager" string="Submit to HR Manager"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state','!=','submit_to_hr_employee')]}" groups="visa_process.group_service_request_hr_employee"/> 
                    
                    <button name="action_reviewed_by_hr_manager"
                            string="Process Complete"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state','!=','submit_to_hr_manager')]}" groups="visa_process.group_service_request_hr_manager"/>
                    


                    
                </header>
                <sheet>
                    <group string="Period" col="2">
                        <group>
                        <field name="from_date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="to_date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <field name="is_payroll_manager" invisible="1"/>
                    </group>
                    <group>
                        <field name="employee_status"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>

                    
                </sheet>
                
            </form>
        </field>
    </record>
   
</odoo>
