<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_client_payslip_approval" model="ir.actions.act_window">
        <field name="name">Client Payroll Approval</field>
        <field name="res_model">client.payslip.approval</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_client_payslip_approval_tree" model="ir.ui.view">
        <field name="name">client.payslip.approval.tree</field>
        <field name="model">client.payslip.approval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="client_parent_id"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_client_payslip_approval_form" model="ir.ui.view">
        <field name="name">client.payslip.approval.form</field>
        <field name="model">client.payslip.approval</field>
        <field name="arch" type="xml">
            <form string="Approval Client Payslip">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    
                    <button name="action_generate_payroll_xsl" string="Generate Payroll" type="object"
                    class="oe_highlight" attrs="{'invisible': [('state','!=','draft')]}"
                    help="Generates the payroll file from client monthly salary tracking records for the selected period."/>
                    
                    <button name="action_submit_to_payroll"
                    string="Submit to Review"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible': ['|','|', ('generated_payroll_document','=',False),('approval_payslip_document','=',False),('state','!=','draft')]}" 
                    groups="visa_process.group_service_request_payroll_employee"/>
                    
                    <button name="action_submit_to_payroll_manager"
                    string="Submit for approval"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible': ['|', ('payslip_documents_ids','=',False), ('state','!=','submit_to_payroll')]}" groups="visa_process.group_service_request_payroll_employee"/>
                    
                    <button name="action_submit_to_payroll_employee"
                    string="Approved" type="object"
                    class="btn-primary"
                    attrs="{'invisible': ['|', ('payslip_documents_ids','=',False), ('state','!=','submit_to_payroll_manager')]}" groups="visa_process.group_service_request_payroll_manager"/>
                    <button name="action_reviewed_by_payroll_employee"
                    string="Confirm Submission" type="object" class="btn-primary"
                    attrs="{'invisible': ['|', ('payslip_documents_ids','=',False), ('state','!=','submit_to_payroll_employee')]}" groups="visa_process.group_service_request_payroll_employee"/>
                    
                </header>
                <sheet>
                    <group col="2">
                        <group>
                            <!-- <field name="client_id"/> -->
                            <field name="client_parent_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="from_date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="to_date"  attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <field name="is_payroll_manager" invisible="1"/>
                    </group>

                    <group string="Approval Document" >
                        <group>
                            <field name="approval_payslip_document" filename="approval_payslip_filename" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="approval_payslip_filename" invisible="1"/>
                            
                            <field name="generated_payroll_document" 
                                filename="generated_payroll_filename" 
                                readonly="1"/>
                            <field name="generated_payroll_filename" invisible="1"/>

                            <field name="approval_document_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible': [('state', '=', 'draft')]}">
                            <page string="Documents">
                                <field name="payslip_documents_ids" attrs="{'readonly': ['|',('state', '!=', 'submit_to_payroll'),('is_payroll_manager','!=', True)]}">
                                    <tree editable="bottom">
                                        <field name="name" string="Document Name"/>
                                        <field name="document_file" filename="document_filename" string="File"/>
                                        <field name="upload_date" string="Upload Date"/>
                                        <field name="document_filename" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="document_file" filename="document_filename"/>
                                            <field name="upload_date"/>
                                            <field name="document_filename" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>