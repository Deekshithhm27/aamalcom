<odoo>
    <record id="view_accounting_report_form_xlsx" model="ir.ui.view">
        <field name="name">accounting.report.form.xlsx</field>
        <field name="model">accounting.report</field>
        <field name="inherit_id" ref="accounting_pdf_reports.accounting_report_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='check_report']" position="after">
                <button name="print_xlsx_report" string="Print (XLSX)" type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <record id="action_report_account_xlsx" model="ir.actions.report">
        <field name="name">Profit and Loss XLSX</field>
        <field name="model">accounting.report</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">accounting_xsl_reports.account_report_xlsx</field>
        <field name="report_file">accounting_xsl_reports.account_report_xlsx</field>
        <field name="print_report_name">'P&amp;L - %s' % (object.date_from and object.date_from.strftime('%Y-%m-%d') + ' to ' + object.date_to.strftime('%Y-%m-%d') or '')</field>
        <field name="binding_model_id" ref="accounting_xsl_reports.model_accounting_report"/>
        <field name="binding_type">report</field>
    </record>
</odoo>