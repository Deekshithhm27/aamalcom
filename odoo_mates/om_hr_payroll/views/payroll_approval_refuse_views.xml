<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_payroll_refuse_wizard_form" model="ir.ui.view">
        <field name="name">payroll.refuse.wizard.form</field>
        <field name="model">payroll.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Refuse Reason">
                <group>
                    <field name="reason" placeholder="Please enter the reason for refusal..."/>
                    <field name="payslip_approval_id" invisible="1"/>
                </group>
                <footer >
                    <button string="Refuse" 
                            name="refuse_payslip" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard (optional but good practice) -->
    <record id="action_payroll_refuse_wizard" model="ir.actions.act_window">
        <field name="name">Refuse Payroll</field>
        <field name="res_model">payroll.refuse.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
