<odoo>
    <template id="report_payslip">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Pay Slip</h2>
                        <p t-field="o.name"/>

                        <!-- Employee Details Table -->
                        <table class="table table-sm table-bordered">
                            <tr>
                                <td><strong>Name</strong></td>
                                <td colspan="3"><span t-field="o.employee_id"/></td>
                            </tr>
                            <tr>
                                <td><strong>Address</strong></td>
                                <td colspan="3">
                                    <div t-field="o.employee_id.address_home_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Email</strong></td>
                                <td><span t-field="o.employee_id.work_email"/></td>
                                <td><strong>Identification No</strong></td>
                                <td><span t-field="o.identification_no"/></td>
                            </tr>
                            <tr>
                                <td><strong>Iqama No</strong></td>
                                <td><span t-field="o.employee_id.iqama_no"/></td>
                                <td><strong>IBAN</strong></td>
                                <td><span t-field="o.bank_iban"/></td>
                            </tr>
                            <tr>
                                <td><strong>Sponsorship Number</strong></td>
                                <td><span t-field="o.employee_id.sponsor_id.sponsor_no"/></td>
                                <td><strong>Reference</strong></td>
                                <td><span t-field="o.number"/></td>
                            </tr>
                            <tr>
                                <td><strong>Bank Name</strong></td>
                                <td><span t-field="o.bank_name"/></td>
                                <td><strong>Date From</strong></td>
                                <td><span t-field="o.date_from"/></td>
                            </tr>
                            <tr>
                                <td><strong>Date To</strong></td>
                                <td><span t-field="o.date_to"/></td>
                                <td><strong>Month</strong></td>
                                <td><span t-field="o.month"/></td>
                            </tr>
                            <tr>
                                <td><strong>Working Days</strong></td>
                                <td><span t-field="o.working_days"/></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>

                        <!-- Earnings vs Deductions Table -->
                        <table style="border-collapse: collapse; width: 100%; border: 1px solid #000;">
                            <thead>
                                <tr>
                                    <th style="border-right: 1px solid #000; padding: 6px 12px;">Earnings</th>
                                    <th style="border-right: 1px solid #000; padding: 6px 12px;">Amount</th>
                                    <th style="border-right: 1px solid #000; padding: 6px 12px;">Deductions</th>
                                    <th style="padding: 6px 12px;">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="earnings" t-value="o.line_ids.filtered(lambda l: l.category_id.name != 'Deduction')"/>
                                <t t-set="deductions" t-value="o.line_ids.filtered(lambda l: l.category_id.name == 'Deduction')"/>

                                <t t-foreach="range(max(len(earnings), len(deductions)))" t-as="i">
                                    <tr t-attf-style="#{ 'border-top: 1px solid black;' if i == 0 else '' }">
                                        <!-- Earnings Name -->
                                        <td style="border-right: 1px solid #000; padding: 4px;">
                                            <t t-if="i &lt; len(earnings)">
                                                <span t-esc="earnings[i].name"/>
                                            </t>
                                        </td>
                                        <!-- Earnings Amount -->
                                        <td style="border-right: 1px solid #000; text-align: right; padding: 4px;">
                                            <t t-if="i &lt; len(earnings)">
                                                <span t-esc="earnings[i].total" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                        </td>
                                        <!-- Deductions Name -->
                                        <td style="border-right: 1px solid #000; padding: 4px;">
                                            <t t-if="i &lt; len(deductions)">
                                                <span t-esc="deductions[i].name"/>
                                            </t>
                                        </td>
                                        <!-- Deductions Amount -->
                                        <td style="text-align: right; padding: 4px;">
                                            <t t-if="i &lt; len(deductions)">
                                                <span t-esc="deductions[i].total" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <p class="text-right" style="margin-top: 20px;">
                            <strong>Authorized signature</strong>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>




