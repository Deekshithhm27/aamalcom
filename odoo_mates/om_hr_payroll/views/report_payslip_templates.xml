<odoo>
    <template id="report_payslip">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: Arial; font-size: 13px;">

                        <div style="text-align:center; margin-bottom:10px;">
                            <t t-if="o.company_id.logo">
                                <img t-att-src="image_data_uri(o.company_id.logo)" alt="Company Logo" style="height:70px;"/>
                            </t>
                            <t t-else="">
                                <h3 style="margin:5px 0;" t-field="o.company_id.name"/>
                            </t>
                            
                            <p style="margin:0;">Al Washm Street, Al Murabba, Riyadh 12631, Saudi Arabia</p>
                            <h4 style="margin-top:8px; text-decoration: underline;">SALARY SLIP</h4>
                        </div>

                        <table style="width:100%; border-collapse: collapse; border:1px solid #000; margin-bottom: 5px;">
                            <tr>
                                <td style="border:1px solid #000; padding:4px; width: 25%;"><strong>Month:</strong></td>
                                <td style="border:1px solid #000; padding:4px; width: 75%;"><span t-esc="o.month or ''"/></td>
                            </tr>
                        </table>

                        <table style="width:100%; border-collapse: collapse; border:1px solid #000; margin-bottom: 5px;">
                            <tr>
                                <td style="border:1px solid #000; padding:4px; width: 20%;"><strong>Employee Name:</strong></td>
                                <td style="border:1px solid #000; padding:4px; width: 30%;"><span t-field="o.employee_id.name"/></td>
                                <td style="border:1px solid #000; padding:4px; width: 20%;"><strong>Emp No:</strong></td>
                                <td style="border:1px solid #000; padding:4px; width: 30%;"><span t-esc="o.employee_id.identification_id or ''"/></td>
                            </tr>
                            <tr>
                                <td style="border:1px solid #000; padding:4px;"><strong>IQAMA:</strong></td>
                                <td style="border:1px solid #000; padding:4px;"><span t-esc="o.employee_id.iqama_no or ''"/></td>
                                <td style="border:1px solid #000; padding:4px;"><strong>Date of Joining:</strong></td>
                                <td style="border:1px solid #000; padding:4px;"><span t-esc="o.employee_id.doj or ''"/></td>
                            </tr>
                            <tr>
                                <td style="border:1px solid #000; padding:4px;"><strong>Bank Name:</strong></td>
                                <td style="border:1px solid #000; padding:4px;"><span t-esc="o.bank_name or ''"/></td>
                                <td style="border:1px solid #000; padding:4px;"><strong>Bank A/c No:</strong></td>
                                <td style="border:1px solid #000; padding:4px;"><span t-esc="o.bank_iban or ''"/></td>
                            </tr>
                        </table>

                        <table style="width:100%; border-collapse:collapse; border:1px solid #000; margin-top:10px;">
                            <thead>
                                <tr style="background:#f0f0f0;">
                                    <th style="border:1px solid #000; padding:4px; width: 25%;">EARNINGS</th>
                                    <th style="border:1px solid #000; padding:4px; width: 25%;">AMOUNT (SAR)</th>
                                    <th style="border:1px solid #000; padding:4px; width: 25%;">DEDUCTIONS</th>
                                    <th style="border:1px solid #000; padding:4px; width: 25%;">AMOUNT (SAR)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;">BASIC</td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <t t-esc="'%.2f' % dict(o.line_ids.mapped(lambda l: (l.code, l.total))).get('BASIC', 0.0)"/>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;">HRA</td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <t t-esc="'%.2f' % dict(o.line_ids.mapped(lambda l: (l.code, l.total))).get('HRA', 0.0)"/>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;">TRANSPORT ALLOWANCE</td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <t t-esc="'%.2f' % dict(o.line_ids.mapped(lambda l: (l.code, l.total))).get('TRANS', 0.0)"/>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;">OTHER ALLOWANCE</td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <t t-esc="'%.2f' % dict(o.line_ids.mapped(lambda l: (l.code, l.total))).get('OTH_ALLOW', 0.0)"/>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;"><strong>GROSS EARNINGS</strong></td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <strong>
                                            <t t-esc="'%.2f' % sum(o.line_ids.filtered(lambda l: l.category_id.code not in ('DED', 'NET')).mapped('total'))"/>
                                        </strong>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #000; padding:4px;"><strong>NET SALARY</strong></td>
                                    <td style="border:1px solid #000; padding:4px; text-align:right;">
                                        <strong>
                                            <t t-esc="'%.2f' % dict(o.line_ids.mapped(lambda l: (l.code, l.total))).get('NET', 0.0)"/>
                                        </strong>
                                    </td>
                                    <td style="border:1px solid #000;"></td>
                                    <td style="border:1px solid #000;"></td>
                                </tr>
                            </tbody>
                        </table>

                        <p style="text-align:right; margin-top:20px;"><strong>Authorized Signature</strong></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>