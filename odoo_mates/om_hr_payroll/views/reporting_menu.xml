<odoo>
    <!-- Parent menu: Reporting (inside Payroll) -->
    <menuitem id="menu_payroll_reporting" 
              name="Reporting" 
              parent="om_hr_payroll.menu_hr_payroll_root"
              sequence="50"/>

    <menuitem id="menu_hr_payroll_approval_process" 
              name="Approval Process" 
              parent="om_hr_payroll.menu_hr_payroll_root" 
              sequence="31" 
              action="action_open_hr_payroll_approval_wizard" groups="visa_process.group_service_request_hr_employee,visa_process.group_service_request_administrator"/>

    <!-- Wizard Action -->
    <record id="action_employee_excel_wizard" model="ir.actions.act_window">
        <field name="name">Employee Excel Report</field>
        <field name="res_model">employee.excel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Submenu for Wizard -->
    <menuitem id="menu_employee_excel_report"
              name="Employee Excel Report"
              parent="menu_payroll_reporting"
              action="action_employee_excel_wizard"
              sequence="10"/>


    <!-- Direct menu to open the wizard -->
    <record id="action_employee_excel_wizard" model="ir.actions.act_window">
        <field name="name">Employee Excel Report</field>
        <field name="res_model">employee.excel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_employee_excel_report_root"
              name="Employee Excel Report"
              action="action_employee_excel_wizard"
              sequence="100"/>
</odoo>
