<odoo>

    <!-- Wizard form view -->
    <record id="view_employee_excel_report_wizard_form" model="ir.ui.view">
        <field name="name">employee.excel.report.wizard.form</field>
        <field name="model">employee.excel.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Employee Excel Report">
                <group>
                    <field name="selection_type"/>
                    <field name="employee_id"
                           attrs="{'invisible': [('selection_type','=','all')], 'required': [('selection_type','=','particular')]}"/>
                </group>
                <footer>
                    <button name="action_generate_excel"
                            type="object"
                            class="btn-primary"
                            string="Print (Excel)"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard directly as a popup -->
    <record id="action_employee_excel_wizard" model="ir.actions.act_window">
        <field name="name">Employee Excel Report</field>
        <field name="res_model">employee.excel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_employee_excel_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- TOP-LEVEL menu that pops the wizard (independent of Payroll) -->
    <menuitem id="menu_employee_excel_report_root"
              name="Employee Excel Report"
              action="action_employee_excel_wizard"
              sequence="100"/>
</odoo>
