<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_journal_entries">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size:15px; line-height: 1.5;">
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h3 style="font-size: 18px; font-weight: bold; color: #2a2a2a;">
                                <span t-field="o.name"/>
                            </h3>
                        </div>
                        <div class="row" style="margin-bottom: 15px;">
                            <table width="100%" class="table-bordered" style="border: 1px solid #ccc; border-collapse: collapse;">
                                <tr style="background-color: #f7f7f7;">
                                    <td style="padding: 10px; width: 50%; font-weight: bold;">Journal:</td>
                                    <td style="padding: 10px; width: 50%;"> <span t-field="o.journal_id.name"/> </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px; font-weight: bold;">Date:</td>
                                    <td style="padding: 10px;">
                                        <span t-field="o.date" t-options="{'widget': 'date'}"/>
                                    </td>
                                </tr>
                                <tr style="background-color: #f7f7f7;">
                                    <td style="padding: 10px; font-weight: bold;">Partner:</td>
                                    <td style="padding: 10px;">
                                        <span t-field="o.partner_id.display_name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 10px; font-weight: bold;">Reference:</td>
                                    <td style="padding: 10px;">
                                        <span t-field="o.ref"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="row" style="margin-top: 30px; margin-bottom: 20px;">
                            <table width="100%" class="table-bordered" style="border: 1px solid #ccc; border-collapse: collapse;">
                                <thead>
                                    <tr style="background-color: #f7f7f7; text-align: center;">
                                        <th style="padding: 10px;">Account</th>
                                        <th style="padding: 10px;">Date</th>
                                        <th style="padding: 10px;">Partner</th>
                                        <th style="padding: 10px;">Label</th>
                                        <th style="padding: 10px;">Analytic Account</th>
                                        <th style="padding: 10px;">Debit</th>
                                        <th style="padding: 10px;">Credit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="total_credit" t-value="0"/>
                                    <t t-set="total_debit" t-value="0"/>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td style="padding: 10px;">
                                                <span t-field="line.account_id.name"/>
                                            </td>
                                            <td style="padding: 10px; text-align: center;">
                                                <span t-field="line.date" t-options="{'widget': 'date'}"/>
                                            </td>
                                            <td style="padding: 10px;">
                                                <span t-field="line.partner_id.display_name"/>
                                            </td>
                                            <td style="padding: 10px;">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td style="padding: 10px;">
                                                <span t-field="line.analytic_account_id.display_name"/>
                                            </td>
                                            <td class="text-right" style="padding: 10px;">
                                                <span t-field="line.debit"
                                                      t-options="{'widget': 'monetary', 'display_currency': line.currency_id}"/>
                                            </td>
                                            <td class="text-right" style="padding: 10px;">
                                                <span t-field="line.credit"
                                                      t-options="{'widget': 'monetary', 'display_currency': line.currency_id}"/>
                                            </td>
                                            <t t-set="total_credit" t-value="total_credit + line.credit"/>
                                            <t t-set="total_debit" t-value="total_debit + line.debit"/>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #f7f7f7; text-align: center;">
                                        <td colspan="5" style="padding: 10px; font-weight: bold;">Total:</td>
                                        <td class="text-right" style="padding: 10px;">
                                            <span t-esc="total_debit"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                        <td class="text-right" style="padding: 10px;">
                                            <span t-esc="total_credit"
                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="row" style="margin-top: 40px; font-size: 12px;">
                            <div style="border-top: 1px solid #ccc; padding-top: 10px; text-align: right; padding-right: 10px;">
                                <span>Printed Date/Time: </span>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M:%S')"/>
                                <br/>
                                <span>Printed By: </span>
                                <span t-esc="user.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
