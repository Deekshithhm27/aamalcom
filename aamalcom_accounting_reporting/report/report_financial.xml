<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial_inherit" inherit_id="accounting_pdf_reports.report_financial">
        <xpath expr="//table[@class='table table-sm table-reports'][2]//tr[@t-foreach='get_account_lines']" position="inside">
            <!-- Loop through partners inside each account -->
            <tr t-foreach="a.get('partners', [])" t-as="partner">
                <td>
                    <span style="color: white;" t-esc="'.....' * int(a.get('level', 0))"/>
                    <span t-esc="partner.get('partner')"/>
                </td>
                <td class="text-right">
                    <span t-esc="partner.get('balance')"
                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>
